# Que 4

# Create a “inventory.csv” file to store item_name, quantity and unit_price of any 5 items then read a file and print the output as shown below:
# INVENTORY REPORT
# ITEM_NME QUANTITY UNIT PRICE AMOUNT

# Create csv file, read it & give output

import csv
itrec = []
file = input("File enter : ")
fh = open(file, "w")
itwriter = csv.writer(fh)
itwriter.writerow(['Item_Name', 'Quantity', 'Unit_Price', 'Total_Price'])
n = int(input("No of item : "))
for i in range(n):
    print("Item record : ", (i+1))
    Item_Name = input("Enter item name : ")
    Qty = int(input("Enter Quantity : "))
    price = float(input("Enter unit price : "))
    Total = Qty*price
    iterec = [Item_Name, Qty, price, Total]
    itwriter.writerow(iterec)
fh.close()
